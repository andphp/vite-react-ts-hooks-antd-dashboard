{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ES6","DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "cypress", "node"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@*": ["src/*"],
    },
    "noUnusedLocals": true
  },
  "include": ["src", "vite.config.ts", "cypress", "./vite.config.ts"],
  "exclude": ["node_modules", "lib", "dist", "typings", "**/__test__", "test", "docs", "tests"]
}
