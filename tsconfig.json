{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ES6", "DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "components/*": ["./src/components/*"]
    },
    "types": ["vite/client","node","react/next", "react-dom/next", "src/declares", "node_modules/@types"],
    "noUnusedLocals": true,
  },
  "include": ["./", "mock/**/*.ts", "src/**/*", "config/**/*", "./vite.config.ts"],
  "exclude": ["node_modules", "lib", "dist", "typings", "**/__test__", "test", "docs", "tests"]
}
